{
  "compilerOptions": {
    "lib": ["ES2021"],
    "module": "NodeNext",
    "target": "ES2021",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "nodenext",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true
  },
  "include": ["src"]
}
